# Warn about JavaScript falsy values that are truthy in Lua
or {
  # Direct usage of problematic values in conditions
  `if ($value) { $_ }` where {
    $value <: or { `0`, `""`, `''` }
  },
  # Negation of problematic values
  `!$value` where {
    $value <: or { `0`, `""`, `''`, `NaN` }
  },
  # Problematic values in ternary
  `$value ? $_ : $_` where {
    $value <: or { `0`, `""`, `''` }
  }
}